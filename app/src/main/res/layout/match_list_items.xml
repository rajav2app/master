<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:id="@+id/llMatch"
    app:ignore="NamespaceTypo">
    <TextView
        android:id="@+id/txtRound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:gravity="center"
        android:padding="5dp"
        android:text=""
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:visibility="gone"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="6dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtMatchNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="center"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txtMatchType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="PCL"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_gravity="start"
            android:padding="5dp"
            android:layout_toEndOf="@+id/txtMatchNo"/>

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_toEndOf="@+id/txtMatchType"
            android:gravity="center"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_toEndOf="@+id/txtDate"
            android:gravity="center"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txtMatchStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="start"
            android:gravity="center"
            android:padding="5dp"
            android:text="Completed"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_teamA"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/team_2"/>

        <TextView
            android:id="@+id/txtTeamNameA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Chennai Super Kings"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_toEndOf="@+id/img_teamA"
            android:layout_centerInParent="true"
            android:padding="5dp"/>

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/txtScoreA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="164 - 6"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_teamB"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/team_1"/>

        <TextView
            android:id="@+id/txtTeamNameB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Chennai Super Kings"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_toEndOf="@+id/img_teamB"
            android:layout_centerInParent="true"
            android:padding="5dp"/>

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/txtScoreB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="164 - 5"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txtMatchLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Mohalli Cricket Stadium"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:padding="5dp"/>

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/txtMatchResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Team A won by 5 wickets"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>